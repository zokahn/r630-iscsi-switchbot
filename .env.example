# r630-iscsi-switchbot Environment Variables Example
# Copy this file to .env and populate with actual values

# S3/MinIO Configuration
S3_ENDPOINT=scratchy.omnisack.nl
S3_ACCESS_KEY=your_access_key_here
S3_SECRET_KEY=your_secret_key_here
S3_SECURE=false  # Set to true for HTTPS

# Hashicorp Vault Configuration
VAULT_ADDR=http://127.0.0.1:8200
VAULT_TOKEN=your_vault_token_here
# Alternatively, use AppRole authentication
# VAULT_ROLE_ID=your_role_id_here
# VAULT_SECRET_ID=your_secret_id_here
VAULT_NAMESPACE=  # Only needed for Vault Enterprise

# TrueNAS Configuration
TRUENAS_API_KEY=your_truenas_api_key_here
TRUENAS_URL=https://your-truenas-server.local/api/v2.0

# OpenShift Configuration
OPENSHIFT_PULL_SECRET_PATH=~/.openshift/pull-secret
OPENSHIFT_SSH_KEY_PATH=~/.ssh/id_rsa.pub
OPENSHIFT_VERSION=4.14
